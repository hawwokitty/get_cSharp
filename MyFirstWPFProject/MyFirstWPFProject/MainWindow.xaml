<Window x:Class="MyFirstWPFProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFirstWPFProject"
        mc:Ignorable="d"
        Title="My First WPF" Height="203" Width="505">
    <Grid>
        <Button x:Name="confirmButton" Content="Confirm" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" Width="270" Click="confirmButton_Click"/>
        <Label Content="What is your name?" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="270"/>
        <TextBox x:Name="enterNameTextbox" HorizontalAlignment="Center" Margin="0,41,0,0" TextWrapping="Wrap" Text="Enter name" VerticalAlignment="Top" Width="270"/>

    </Grid>
</Window>
